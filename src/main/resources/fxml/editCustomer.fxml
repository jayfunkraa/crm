<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="200" prefWidth="600" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kartoffelkopf.crm.controller.EditCustomerController">
   <rowConstraints>
      <RowConstraints percentHeight="100" />
      <RowConstraints minHeight="10.0" percentHeight="100.0" prefHeight="30.0" />
   </rowConstraints>
    <columnConstraints>
        <ColumnConstraints percentWidth="100" />
      <ColumnConstraints minWidth="10.0" percentWidth="100.0" prefWidth="100.0" />
    </columnConstraints>
   <children>
      <Label text="Name" />
      <TextField fx:id="nameTextField" GridPane.columnIndex="1" />
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <buttons>
          <Button fx:id="saveButton" mnemonicParsing="false" onMouseReleased="#handle_saveButton_onMouseReleased" text="Save" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onMouseReleased="#handle_cancelButton_onMouseReleased" text="Cancel" />
        </buttons>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
